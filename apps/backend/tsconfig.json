{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@cvr-bus-tracker/shared-types": ["../../packages/shared-types/dist"],
      "@cvr-bus-tracker/utils": ["../../packages/utils/src"],
      "@cvr-bus-tracker/config": ["../../packages/config/dist"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist", "tests"]
}