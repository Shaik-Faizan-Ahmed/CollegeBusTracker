{
  "name": "cvr-bus-tracker",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:android:clean": "cd android && ./gradlew clean assembleRelease",
    "build:android:bundle": "cd android && ./gradlew bundleRelease",
    "build:android:aab": "cd android && ./gradlew clean bundleRelease",
    "build:ios": "npx react-native run-ios --configuration Release",
    "build:ios:clean": "npx react-native clean && npx react-native run-ios --configuration Release",
    "build:ios:archive": "cd ios && xcodebuild archive -workspace mobile.xcworkspace -scheme mobile -configuration Release",
    "bundle:android": "npx react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res",
    "bundle:ios": "npx react-native bundle --platform ios --dev false --entry-file index.js --bundle-output ios/main.jsbundle --assets-dest ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run test",
    "postinstall": "cd ios && pod install || true"
  },
  "dependencies": {
    "@cvr-bus-tracker/config": "1.0.0",
    "@cvr-bus-tracker/shared-types": "1.0.0",
    "@cvr-bus-tracker/utils": "1.0.0",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-community/cli-platform-android": "^20.0.1",
    "@react-native-community/geolocation": "^3.4.0",
    "@react-native-community/netinfo": "^9.5.0",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.9.17",
    "crypto-js": "^4.2.0",
    "react": "18.2.0",
    "react-native": "0.72.6",
    "react-native-device-info": "^14.0.4",
    "react-native-keep-awake": "^4.0.0",
    "react-native-maps": "1.15.6",
    "react-native-safe-area-context": "^5.6.1",
    "react-native-screens": "^4.16.0",
    "socket.io-client": "^4.8.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-private-methods": "^7.18.6",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/plugin-transform-private-methods": "^7.27.1",
    "@babel/plugin-transform-private-property-in-object": "^7.27.1",
    "@babel/preset-env": "^7.20.0",
    "@babel/preset-typescript": "^7.27.1",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.72.2",
    "@react-native/metro-config": "^0.72.11",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/react-native": "^13.3.3",
    "@tsconfig/react-native": "^3.0.0",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^24.3.1",
    "@types/react": "^18.0.24",
    "@types/react-native-keep-awake": "^2.0.8",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.2.1",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.76.8",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "ts-jest": "^29.4.1",
    "typescript": "4.9.5"
  },
  "engines": {
    "node": ">=16"
  }
}
